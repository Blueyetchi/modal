{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "alwaysStrict": true,
    "lib": ["dom", "es2015", "es2017"],
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}